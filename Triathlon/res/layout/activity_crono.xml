<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/marcofragment"
    tools:context=".Cronometros" >

  <LinearLayout
      android:id="@+id/Arriba"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="2dp"
      android:orientation="horizontal" >

        <fragment
            android:id="@+id/Fragment1"
            android:name="com.arda.screens.CronoDeportista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />

          <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/Fragment2"
            android:name="com.arda.screens.CronoDeportista2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/Abajo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal" >

        <fragment
            android:id="@+id/fragment3"
            android:name="com.arda.screens.CronoDeportista3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />

        <fragment
            android:id="@+id/fragment4"
            android:name="com.arda.screens.CronoDeportista4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />
 
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/boton_aceptar_pequeno_registro" />

</LinearLayout>
